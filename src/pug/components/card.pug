mixin card(image,color1,color2,title,subtitle,btnColor)
  .card
    .card__side.card__side--front
      .card__picture.card__picture--1(style=`background-image:linear-gradient(to right,${color1},${color2}), url(${image});`) &nbsp;
      h4.card__heading
        span.card__heading-span.card__heading-span--1(style='background-image:linear-gradient(to right, '+color1+','+color2+')')=title
      .card__details
        ul
          li=subtitle
          
    .card__side.card__side--back.card__side--back-1(style='background-image:linear-gradient(to right, '+color1+','+color2+')')
      .card__cta
        .card__price-box
          img(src="img/titanes2.png", alt="logo")
          +button(btnColor)